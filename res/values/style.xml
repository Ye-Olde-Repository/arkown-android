<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TwoColumnHeader" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">4dip</item>
        
    </style>
    <style name="TwoColumnLabel" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">90sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingTop">1dip</item>
    </style>
    <style name="TwoColumnSpinner" parent="@android:style/Widget.Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="TwoColumnEdit" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@android:drawable/editbox_background</item>
    </style>    
    <style name="TwoColumnCheckboxLabel" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">90sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingTop">8dip</item>
    </style>        
    <style name="TwoColumnCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>       
</resources>
